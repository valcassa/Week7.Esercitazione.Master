@model List<ProdottoViewModel>


<h1>Ecco la Lista dei Prodotti</h1>

<a class="btn btn-primary" asp-controller="Prodotto" asp-action="Details" type="button">Visualizza Dettagli</a>
<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Codice</th>
             @*<th>Descrizione</th>*@
            <th>Prezzo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idProdotto</td>
                 @*<td>@item.Descrizione</td>*@
                <td>Prezzo</td>
                <th>
                    <a asp-controller="Prodotto" asp-action="Details" asp-route-id="@item.IdProd" class="btn btn-primary">Visualizza Dettagli</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
      
    </tfoot>
</table>